<form method="post" action="{{ path('admin_tech_delete', {'id': tech.id}) }}" onsubmit="return confirm('Are you sure you want to delete this tech?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tech.id) }}">
    <button class="btn">Delete</button>
</form>
